<div class="row">
  <div class="small-12 large-4 columns">
    <%= image_tag @picture.url %>
  </div>
  <div class="small-12 large-8 columns">
    <h4>Comments:</h4>
    <div class="row">
      <div class="small-12 large-12 columns">
        <% @comments.each do |comment| %>
          <% if !comment.new_record? %>
            <div class="achievement_box">
              <%= comment.body %>
              <i>...posted by <%= comment.picture.user.user_name %> on <%= comment.created_at.strftime("%B %d") %></i>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="small-12 large-12 columns">
          <%= form_for(@picture, :url => achievement_picture_path , :html => {:multipart => true}) do |f| %>
            <%= f.fields_for :comments do |c| %>
              <%if c.object.new_record? %>
                <div>
                  <%= c.label :body, "Leave a comment:", :autofocus => true %>
                  <%= c.text_field :body %>
                </div>
              <% end %>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>