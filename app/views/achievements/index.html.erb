<h1>Achievements#index</h1>
<p>Find me in app/views/achievements/index.html.erb</p>


<table>
  <thead>
    <caption>Achievemenets</caption>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Points</th>
    </tr>
  </thead>
  <tbody>
    <% @achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.title %></td>
        <td><%= achievement.description %></td>
        <td><%= achievement.points %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="small-12 large-12 columns">
    <% @achievements.each do |achievement| %>
    <div class="achievement_box">
      <p><%= achievement.title %></p>
      <p><%= achievement.description %></p>
      <p class="label right"><%= achievement.points %></p>
    </div>
    <% end %>
  </div>
</div>